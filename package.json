{
  "name": "wiki-langlinks-web",
  "version": "0.3.3",
  "description": "Web app for multi-language translation via MediaWiki",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "standard",
    "pretest": "npm run lint",
    "test": "jest",
    "test-watch": "jest --watch",
    "build": "webpack --env=prod",
    "clean": "rm -rf dist/",
    "deploy": "now dist --public --name wiki-langlinks-web && now alias wiki-langlinks",
    "ci": "npm run test && npm run clean && npm run build"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iredchuk/wiki-langlinks-web.git"
  },
  "keywords": [
    "wiki",
    "mediawiki",
    "languages",
    "translation"
  ],
  "author": "iredchuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iredchuk/wiki-langlinks-web/issues"
  },
  "homepage": "https://github.com/iredchuk/wiki-langlinks-web#readme",
  "dependencies": {
    "prop-types": "~15.6.0",
    "react": "~16.0.0",
    "react-dom": "~16.0.0",
    "react-loading": "~1.0.0",
    "styled-components": "~2.2.1",
    "superagent": "~3.7.0"
  },
  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-loader": "~7.1.2",
    "babel-minify-webpack-plugin": "~0.2.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.1",
    "babel-preset-react": "~6.24.1",
    "html-webpack-plugin": "~2.30.1",
    "jest": "~21.2.1",
    "standard": "~10.0.3",
    "webpack": "~3.8.1",
    "webpack-dev-server": "~2.9.3"
  },
  "standard": {
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "ignore": "dist/**/*.js"
  }
}
