{
  "name": "wiki-langlinks-web",
  "version": "0.3.1",
  "description": "Web app for multi-language translation via MediaWiki",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "standard",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "build": "webpack --env=prod",
    "clean": "rm -rf dist/",
    "ci": "npm run test && npm run clean && npm run build"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iredchuk/wiki-langlinks-web.git"
  },
  "keywords": [
    "wiki",
    "mediawiki",
    "languages",
    "translation"
  ],
  "author": "iredchuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iredchuk/wiki-langlinks-web/issues"
  },
  "homepage": "https://github.com/iredchuk/wiki-langlinks-web#readme",
  "dependencies": {
    "prop-types": "~15.5.10",
    "react": "~15.6.1",
    "react-dom": "~15.6.1",
    "react-loading": "~0.1.4",
    "styled-components": "~2.1.0",
    "superagent": "~3.5.2"
  },
  "devDependencies": {
    "babel-core": "~6.25.0",
    "babel-loader": "~7.1.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-react": "~6.24.1",
    "html-webpack-plugin": "~2.29.0",
    "jest": "~20.0.4",
    "standard": "~10.0.2",
    "webpack": "~3.4.1",
    "webpack-dev-server": "~2.6.1"
  },
  "standard": {
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "ignore": "dist/**/*.js"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js"]
  }
}
